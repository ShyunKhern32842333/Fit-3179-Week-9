{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Malaysia's Literacy Rates by State (2019)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/ShyunKhern32842333/Fit-3179-Week-9/refs/heads/main/js/geoBoundaries-MYS-ADM1.topojson",
    "format": {"type": "topojson", "feature": "MYSADM1gbOpen"}
  },
  "transform": [
    {
      "lookup": "properties.shapeName",
      "from": {
        "data": {
          "url": "data/Malaysia_States_Literacy_2019.csv"
        },
        "key": "Country",
        "fields": ["MaleLiteracyRate", "FemaleLiteracyRate"]
      }
    }
  ],
  "params": [
    {
      "name": "Gender",
      "value": "Male",
      "bind": {
        "input": "select",
        "options": ["Male", "Female"],
        "labels": ["Male Literacy Rate", "Female Literacy Rate"]
      }
    }
  ],
        "resolve": {"legend":{"color": "independent"}, "scale": {"color": "independent"} },
  "layer": [
    {
      "transform": [{"filter": "Gender === 'Male'"}],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "MaleLiteracyRate",
          "type": "quantitative",
          "scale": {"domain": [80, 100], "range": ["lightblue", "darkblue"]},
          "legend": {"title": "Male Literacy Rate (%)"}
        },
        "tooltip": [
          {"field": "properties.shapeName", "type": "nominal", "title": "State"},
          {
            "field": "MaleLiteracyRate",
            "type": "quantitative",
            "format": ".1f",
            "title": "Male Literacy Rate (%)"
          }
        ]
      }
    },
    {
      "transform": [{"filter": "Gender === 'Female'"}],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "FemaleLiteracyRate",
          "type": "quantitative",
          "scale": {"domain": [80, 100], "range": ["lightpink", "darkred"]},
          "legend": {"title": "Female Literacy Rate (%)"}
        },
        "tooltip": [
          {"field": "properties.shapeName", "type": "nominal", "title": "State"},
          {
            "field": "FemaleLiteracyRate",
            "type": "quantitative",
            "format": ".1f",
            "title": "Female Literacy Rate (%)"
          }
        ]
      }
    }
  ]
}
