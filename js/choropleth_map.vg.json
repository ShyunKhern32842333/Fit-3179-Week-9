{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Male Literacy Rates by State (2019)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/ShyunKhern32842333/Fit-3179-Week-9/refs/heads/main/js/geoBoundaries-MYS-ADM1.topojson",
    "format": {"type": "topojson", "feature": "MYSADM1gbOpen"}
  },
  "transform": [
    {
      "lookup": "properties.shapeName",
      "from": {
        "data": {
          "url": "data/Malaysia_States_Literacy_2019.csv"
        },
        "key": "Country",
        "fields": ["MaleLiteracyRate"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "black"},
  "encoding": {
    "color": {
      "field": "MaleLiteracyRate",
      "type": "quantitative",
      "scale": {
        "domain": [80, 100],
        "range": ["lightyellow", "darkgreen"]
      },
      "legend": {"title": "Male Literacy Rate (%)"}
    },
    "tooltip": [
      {"field": "properties.shapeName", "type": "nominal", "title": "State"},
      {"field": "MaleLiteracyRate", "type": "quantitative", "format": ".1f", "title": "Male Literacy Rate (%)"}
    ]
  }
}
